        button {
            border-radius: 5px;
            border-width: 3px;
        }
    </style>
</head>
<h2>Chi tiết sách <i>"@Html.DisplayFor(model => model.TenSach)"</i></h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Mã sách:<span style="color: blue;"> @Html.DisplayFor(model => model.MaSach)</span>

        </dt>
        <dt>
            Tên sách:<span style="color: blue;"> @Html.DisplayFor(model => model.TenSach)</span>
        </dt>


        <dt>
