@model QuanLyThuVien.Models.SACH

@{
    ViewBag.Title = "EditSach";
}

<head>
    <style>
        button {
            border: 2px solid;
            border-radius: 5px;
            width: 80px;
            height: 35px;
        }

        input {
            border: 2px solid;
            border-radius: 5px;
            width: 80px;
            height: 35px;
        }
    </style>
</head>
<h2>Sửa sách</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.MaSach)



    <div class="form-group">
        <p>Mã thể loại</p>
        <div class="col-md-10">
            @Html.EditorFor(model => model.MaTL, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.MaTL, "", new { @class = "text-danger" })<br />
            <button style="width:150px;"> @Html.ActionLink("Xem thể loại", "ListTL1")</button>
        </div>
    </div><br />

    <div class="form-group">
        <p>Thể loại</p>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Theloai, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Theloai, "", new { @class = "text-danger" })
        </div>
    </div><br />


    <div class="form-group">
        <p>Tên sách</p>

        <div class="col-md-10">
            @Html.EditorFor(model => model.TenSach, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.TenSach, "", new { @class = "text-danger" })
        </div>
    </div><br />



    <div class="form-group">
       <p>Tác giả</p>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Tacgia, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Tacgia, "", new { @class = "text-danger" })
        </div>
    </div><br />

    <div class="form-group">
        <p>Năm xuất bản</p>
        <div class="col-md-10">
            @Html.EditorFor(model => model.NamXB, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.NamXB, "", new { @class = "text-danger" })
        </div>
    </div><br />



    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input style="border-radius: 5px; border: 2px solid; background-color: antiquewhite;" type="submit" value="Lưu" class="btn btn-default" />&ensp;
            <button style="border-radius: 5px; border: 2px solid; background-color: aqua;"> @Html.ActionLink("Quay lại", "ListSach")</button>
        </div>
    </div>
</div>
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
