@model IEnumerable<QuanLyThuVien.Models.SACH>

@{
    ViewBag.Title = "ListSach";
}
<head>
    <style>
        button{
            border-radius:5px;
            border-width:3px;
        }
    </style>
</head>
<h2>Danh sách sách</h2>

<p>
    <button style="background-color:lawngreen"> @Html.ActionLink("Thêm sách mới", "CreateSach")</button>
</p>
<table class="table">
    <tr>
        <th>
            Tên sách
        </th>
        <th>
            Thể loại
        </th>
        <th>
           Tác giả
        </th>
        <th>
            Năm xuất bản
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TenSach)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Theloai)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Tacgia)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NamXB)
        </td>

        <td>
            <button style="background-color: aquamarine;"> @Html.ActionLink("Sửa", "EditSach", new { MaSach = item.MaSach }) </button>&ensp;
            <button style="background-color: lightpink; "> @Html.ActionLink("Chi tiết", "DetailsSach", new { id = item.MaSach }) </button>&ensp;
            <button style="background-color: red; "> @Html.ActionLink("Xóa", "DeleteSach", new { MaSach = item.MaSach })</button>
        </td>
    </tr>
}

</table>
