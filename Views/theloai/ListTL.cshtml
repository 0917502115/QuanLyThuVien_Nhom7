@model IEnumerable<QuanLyThuVien.Models.THELOAI>

@{
    ViewBag.Title = "ListTL";
}
<head>
    <style>
        button {
            border-radius: 5px;
            border-width: 3px;
        }
    </style>
</head>
<h2>Danh sách thể loại</h2>

<p>
    <button style="background-color:lawngreen"> @Html.ActionLink("Thêm thể loại", "CreateTL")</button>
</p>
<table class="table">
    <tr>
        <th>
           Tên thể loại
        </th>
        <th>
            Mã thể loại
        </th>
        <th>

        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TenTL)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MaTL)
        </td>
        <td>
            <button style="background-color: aquamarine;"> @Html.ActionLink("Sửa", "EditTL", new { MaTL = item.MaTL }) </button>
            <button style="background-color: lightpink; "> @Html.ActionLink("Chi tiết", "DetailsTL", new { id = item.MaTL }) </button>
            <button style="background-color: red; "> @Html.ActionLink("Xóa", "DeleteTL", new { MaTL = item.MaTL })</button>
        </td>
    </tr>
}

</table>
